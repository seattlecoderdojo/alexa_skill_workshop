<% if @user %>
  <%= link_to 'Click Here to sign into the Console', @login_uri %>
<% else %>
  <a href="/auth/amazon" id="LoginWithAmazon">
    <img border="0"
         alt="Login with Amazon"
         src="https://images-na.ssl-images-amazon.com/images/G/01/lwa/btnLWA_drkgry_312x64.png"
         width="312" height="64" />
  </a>
<% end %>
